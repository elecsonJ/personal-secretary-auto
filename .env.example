# Firebase 설정 (GitHub Secrets에만 설정, 로컬에서는 시뮬레이션 모드)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"..."}

# FCM 토큰 (PWA 클라이언트에서 자동 생성됨)
# localStorage.getItem('fcmToken')으로 확인 후 GitHub Secrets에 등록
FCM_TOKEN_MACBOOK=your-macbook-fcm-token
FCM_TOKEN_IPHONE=your-iphone-fcm-token

# Notion API 설정
# https://www.notion.so/my-integrations 에서 생성
NOTION_API_KEY=secret_your-notion-integration-token
NOTION_CALENDAR_DB_ID=your-calendar-database-id
NOTION_TASKS_DB_ID=your-tasks-database-id

# 기상청 동네예보 API
# https://www.data.go.kr/data/15084084/openapi.do 에서 신청
WEATHER_API_KEY=your-korean-meteorological-admin-api-key

# 서버 설정 (로컬 개발용)
PORT=3000

# GitHub Actions 자동 설정 (수동 설정 불필요)
GITHUB_ACTIONS=false